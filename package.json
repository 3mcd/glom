{
  "private": true,
  "name": "glom",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "bun run --filter=server-authoritative-canvas dev",
    "dev.p2p": "bun run --elide-lines=0 --filter=p2p-canvas dev",
    "dev.share": "ngrok start --config ngrok.yml frontend backend",
    "test": "bun run --elide-lines=0 --filter=* test",
    "bench": "bun run --elide-lines=0 --filter=* bench",
    "docs.build": "mkdir -p dist && ./scripts/ssg docs/src dist \"Glom Documentation\" \"https://3mcd.github.io/glom\" && touch dist/.nojekyll"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "mitata": "^1.0.34"
  },
  "catalogs": {
    "build": {
      "typescript": "5.9.3"
    }
  },
  "workspaces": [
    "app/*",
    "lib/*"
  ],
  "preconstruct": {
    "exports": true,
    "packages": [
      "lib/*"
    ]
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@babel/preset-typescript": "^7.28.5",
    "@biomejs/biome": "^2.3.10",
    "@preconstruct/cli": "^2.8.12",
    "typescript": "catalog:build"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
